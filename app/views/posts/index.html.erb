<h1>Listing posts</h1>

<div id='posts'>
  <% @posts.each do |post| %>
    <div class="expandable" >
      <div class="title">
        <%=h post.title %>
      </div>
      <div class="body">
        <%=h post.body %>      
      </div>
      <table>
        <tr>
          <td><%=h post.published %></td>
          <td><%= link_to 'Show', post %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
        </tr>
      </table>
    </div>
  <% end %>
</div>

<br />

<%= link_to 'New post', new_post_path %>